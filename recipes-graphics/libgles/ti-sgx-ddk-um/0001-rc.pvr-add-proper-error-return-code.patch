---
 targetfs/ti335x/etc/init.d/rc.pvr | 8 +++++---
 1 file changed, 5 insertions(+), 3 deletions(-)

diff --git a/targetfs/ti335x/etc/init.d/rc.pvr b/targetfs/ti335x/etc/init.d/rc.pvr
index 28abce9..ec8e89e 100755
--- a/targetfs/ti335x/etc/init.d/rc.pvr
+++ b/targetfs/ti335x/etc/init.d/rc.pvr
@@ -37,11 +37,11 @@ load_pvr()
 				/sbin/depmod && depmod_has_been_run=1
 			fi
 		fi
-		if ! /sbin/modprobe -q pvrsrvkm; then return; fi
+		if ! /sbin/modprobe -q pvrsrvkm; then return 1; fi
 	fi
 
 	# Run the PVR initialisation server
-	if ! /usr/bin/pvrsrvctl --start --no-module; then return; fi
+	if ! /usr/bin/pvrsrvctl --start --no-module; then return 1; fi
 
 	# Load remaining modules.
 	#
@@ -96,6 +96,7 @@ case "$1" in
 stop)
 	if ! unload_pvr; then
 		echo "Couldn't unload modules" >&2;
+		exit 1
 	fi
 	;;
 reload|restart)
@@ -103,10 +104,11 @@ reload|restart)
 		load_pvr
 	else
 		echo "Couldn't unload modules" >&2;
+		exit 1
 	fi
 	;;
 *)
 	echo "$0: unknown argument $1." >&2;
+	exit 1
 	;;
 esac
